# dotfiles git alias
alias dots="git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"

# update plugins
alias update_vim_plugins="~/.vim/bundle && find . -name .git -type d -execdir git pull ';'"
alias update_zsh_plugins="${ZPLUGDIR} && find . -name .git -type d -execdir git pull ';'"

